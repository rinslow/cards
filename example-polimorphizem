from abc import ABC, abstractmethod


class Animal(ABC): # abstract base class
    @abstractmethod
    def make_sound(self) -> str:
        pass


class Cat(Animal):
    def make_sound(self):
        return "Meow"

    def purr(self):
        return "Purr"


class Dog(Animal):
    def make_sound(self):
        return "Woof"


class AnimalFactory:
    @staticmethod
    def create_animal(animal_type: str) -> Animal:
        if animal_type == "cat":
            return Cat()
        elif animal_type == "dog":
            return Dog()
        else:
            raise ValueError(f"Unknown animal type: {animal_type}")
        



animal = AnimalFactory.create_animal("cat")
print(animal.make_sound())  # Output: Meow
animal.purr()  # bug! animal is not a Cat



